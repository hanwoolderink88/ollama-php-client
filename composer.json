{
    "name": "hanwoolderink/ollama-php-client",
    "description": "Ollama php client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "hanwoolderink",
            "email": "hanwoolderink@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "7.8.*",
        "illuminate/collections": "^11.18"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "phpstan/phpstan": "^1.11",
        "friendsofphp/php-cs-fixer": "^3.59",
        "symfony/var-dumper": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "Hanwoolderink\\Ollama\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hanwoolderink\\Ollama\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit tests/",
        "test-coverage": "php -d xdebug.mode=coverage vendor/bin/phpunit tests/ --coverage-html coverage/",
        "style": [
            "@php vendor/bin/php-cs-fixer fix src/ --rules=@PSR12",
            "@php vendor/bin/php-cs-fixer fix tests/ --rules=@PSR12"
        ],
        "analyse": "phpstan analyse"
    }
}
